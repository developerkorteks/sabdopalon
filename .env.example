# ================================================
# TELEGRAM SUMMARIZER - ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env and fill in your values

# ===== TELEGRAM BOT CONFIGURATION =====
TELEGRAM_BOT_TOKEN=your_bot_token_here
PHONE_NUMBER=+628123456789

# ===== AI CONFIGURATION =====
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# ===== DATABASE CONFIGURATION =====
DATABASE_PATH=telegram_bot.db

# ===== SCHEDULER CONFIGURATION =====
SUMMARY_INTERVAL_HOURS=1
DAILY_SUMMARY_TIME=23:59
TARGET_CHAT_ID=your_telegram_user_id

# ===== MONITORING BOT CONFIGURATION =====
MONITOR_BOT_TOKEN=monitoring_bot_token
MONITOR_CHAT_ID=your_telegram_user_id

# ===== LOGGING CONFIGURATION =====
DEBUG_MODE=false
LOG_LEVEL=INFO

# ===== APPLICATION SETTINGS =====
RUN_MODE=all
SESSION_FILE=session.json
